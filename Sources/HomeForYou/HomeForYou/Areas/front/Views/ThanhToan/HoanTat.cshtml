                                            <tr>
                                                <th colspan="2" style="height: 0;">
                                                    <p id="error_phone" class="errorSimpleMsg">
                                                    </p>
                                                </th>
                                            </tr>
                                            <tr>
                                                <td colspan="2" style="padding-left: 20px;">
                                                    <p>
                                                        <span>• Số điện thoại: @ViewBag.khachhang.SoDT</span>
                                                    </p>
                                                </td>
                                            </tr>
                                            <input id="bstage_render_timestamp" name="bstage_render_timestamp" value="1353574902" type="hidden">
                                            <input id="upgrade_to" name="upgrade_to" value="0" type="hidden">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
