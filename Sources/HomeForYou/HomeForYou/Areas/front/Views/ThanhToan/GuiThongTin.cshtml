@using HomeForYou.Areas.front.Controllers
@section scripts
{
    <script type="text/javascript">
        function DatPhong1() {
            var c_code = document.getElementById("client_code").value;
            if (c_code == "") {
                $("#mathe_loi").hide();
                $("#mathe_rong").show();
            }
            else {
                $("#mathe_rong").hide();
                $.ajax({
                    url: '/front/ThanhToan/Test',
                    type: 'POST',
                    data: { code: c_code },
                    dataType: "json",
                    success: function (isValid) {
                        if (isValid) {
                            $("#mathe_loi").hide();
                            $("#bookForm").submit();
                            return true;
                        }
                        else {
                            $("#mathe_loi").show();
                            return false;
                        }
                    }
                });
            }
        };
        function DatPhong2() {
            var fn = document.getElementById("firstname").value;
            var ln = document.getElementById("lastname").value;
            var e = document.getElementById("email").value;
            var ec = document.getElementById("email_confirm").value;
            var cmnd = document.getElementById("cmnd").value;
            //var cc = document.getElementById("credit_card").value;
            var ad = document.getElementById("address").value;
            if (fn == "" || ln == "" || e == "" || ec == "" || cmnd == "" || ad == "") {
                alert("Vui lòng nhập đầy đủ thông tin bắt buộc");
            }
            else {
                $.ajax({
                    url: '/front/ThanhToan/Valid_Email',
                    type: 'POST',
                    data: { email: e },
                    dataType: "json",
                    success: function (isValid) {
                        if (!isValid) {
                            $("#mail_error").show();
                            return true;
                        }
                        else {
                            $("#mail_error").hide();
                            return false;
                        }
                    }
                });
                if (e != ec) {
                    alert("Email xác nhận không đúng.");
                }
                else
                    $("#bookForm").submit();
            }
        };

        function MailValidation() {
            var e = document.getElementById("email").value;
            $.ajax({
                url: '/front/ThanhToan/Valid_Email',
                type: 'POST',
                data: { email: e },
                dataType: "json",
                success: function (isValid) {
                    if (!isValid) {
                        $("#mail_error").show();
                        $("#mail_valid").hide();
                        return true;
                    }
                    else {
                        $("#mail_error").hide();
                        $("#mail_valid").show();
                        return false;
                    }
                }
            });
        }
    </script>
}
