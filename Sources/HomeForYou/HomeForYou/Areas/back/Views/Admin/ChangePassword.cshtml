@{
    ViewBag.Title = "Đổi mật khẩu";
    string username = null;
    int manv = 0;
    if (Session["Username"] != null)
    {
        username = Session["Username"].ToString();
    }
    if (Session["Staff_ID"] != null)
    {
        manv = (int)Session["Staff_ID"];
    }
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/back_style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
</head>
<body>
    <header>
        <div class="navbar navbar-fixed-top navbar-inverse">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar " data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a href="index" class="brand">Home For You</a>
                    <div class="nav-collapse">
                        <ul class="nav pull-left">
                            <li>@Html.ActionLink("Trang chủ", "Index", "Admin")</li>
                        </ul>
                      <ul class="nav pull-right">
                            <li>@Html.ActionLink("Đổi mật khẩu", "ChangePassword", "Admin")</li>
                            <li>@Html.ActionLink("Thoát", "Logout", "Admin")</li>
                        </ul> 
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div id="login-panel" class="span6 offset3 form-login">
        <legend>Đổi mật khẩu</legend>
        @if (@ViewBag.Errors != null)
        {
            @Html.Raw(ViewBag.Errors)
        }
        @if (@ViewBag.Success != null)
        {
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">
                    ×</button>
                <h4>
                    Chúc mừng!</h4>
                @ViewBag.Success
            </div>
        }
        @using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post, new { @class = "well" }))
        {
            <fieldset>
                <input type="hidden" name="manv" value="@manv"/>
                <div>
                    <label>
                        Tài khoản</label>
                    <input type="text" name="username" disabled class="input-xlarge" value="@username">
                </div>
                <div>
                    <label>
                        Mật khẩu hiện tại</label>
                    <input type="password" name="current_password" class="input-xlarge">
                </div>
                <div>
                    <label>
                        Mật khẩu mới</label>
                    <input type="password" name="new_password" class="input-xlarge">
                </div>
                <div>
                    <label>
                        Xác nhận mật khẩu</label>
                    <input type="password" name="confirm_password" class="input-xlarge">
                </div>
                <button type="submit" class="btn btn-large btn-primary">
                    Đổi mật khẩu</button>
            </fieldset>
        }
    </div>
</body>
</html>
