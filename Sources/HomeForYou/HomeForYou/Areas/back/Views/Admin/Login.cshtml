@{
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/back_style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
</head>
<body>
    <header>
        <div class="navbar navbar-fixed-top navbar-inverse">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar " data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a href="index" class="brand">Home For You</a>
                    <div class="nav-collapse">
                        <ul class="nav pull-left">
                            <li><a href="index">Trang chủ</a></li>
                        </ul>
                    @{/*    <ul class="nav pull-right">
                            <li><a href="">Đổi mật khẩu</a></li>
                            <li><a href="admin/log">Thoát</a></li>
                        </ul> */}
                       
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div id="login-panel" class="span6 offset3 form-login">
        @if (@ViewBag.Message != null)
        {
            <div class="alert alert-error">
                <button type="button" class="close" data-dismiss="alert">
                    ×</button>
                <h4>
                    Lỗi!</h4>
                @ViewBag.Message
            </div>
        }
        <form class="well" method="Post" action="login">
        <fieldset>
            <div>
                <label>
                    Tài khoản</label>
                <input type="text" name="username" class="input-xlarge" value="">
            </div>
            <div>
                <label>
                    Mật khẩu</label>
                <input type="password" name="password" class="input-xlarge">
            </div>
            <button type="submit" class="btn btn-large btn-primary">
                Đăng nhập</button>
        </fieldset>
        </form>
    </div>
</body>
</html>
