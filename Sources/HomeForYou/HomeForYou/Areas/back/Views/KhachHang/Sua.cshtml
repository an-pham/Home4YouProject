@model HomeForYou.KhachHang
@{
    Layout = "~/Areas/back/Views/Shared/back_layout.cshtml";
}
<ul class="breadcrumb">
    <li>@Html.ActionLink("Trang chủ", "Index", "Admin")<span class="divider">/</span>
    </li>
    <li>@Html.ActionLink("Danh sách khách hàng", "DanhSach", "KhachHang") <span class="divider">/</span>
    </li>
    <li class="active">Cập nhật <span class="divider">/</span> </li>
    <li class="active"></li>
</ul>
<legend>Cập nhật khách hàng: </legend>
@if (@ViewBag.Message != null && ViewBag.Success==1)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">
            ×</button>
        <h4>
            Chúc mừng!</h4>
        @ViewBag.Message
    </div>
}
@if (@ViewBag.Message != null && ViewBag.Success==0)
{
    <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">
            ×</button>
        <h4>
            Không thành công!</h4>
        @ViewBag.Message
    </div>
}
<form class="form-horizontal" method="post" enctype="multipart/form-data">
<div class="control-group">
    <div class="controls">
        <input type="hidden" name="ID" value="@Model.ID"/>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        SoTheKH</label>
    <div class="controls">
        <input type="text"  disabled value="@Model.SoTheKH"/>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Họ</label>
    <div class="controls">
        <input type="text" name="ho" value="@Model.Ho"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Tên</label>
    <div class="controls">
        <input type="text" name="ten" value="@Model.Ten"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Địa chỉ</label>
    <div class="controls">
        <input type="text" name="diachi" value="@Model.DiaChi"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        CMND</label>
    <div class="controls">
        <input type="text" name="cmnd" value="@Model.CMND"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Số ĐT</label>
    <div class="controls">
        <input type="text" name="sodt" value="@Model.SoDT"/>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Email</label>
    <div class="controls">
        <input type="text" name="email" value="@Model.Email"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Thẻ tín dụng</label>
    <div class="controls">
        <input type="text"  disabled value="@Model.TheTinDung"/>
    </div>
</div>
<legend>Status</legend>
<div class="control-group">
    <div class="controls">
        <select name="tinhtrang">
            <option value="Enabled"  @if (@Model.TinhTrang == "Enabled") { ViewContext.Writer.Write("selected"); }>
                Enabled</option>
            <option value="Disabled" @if (@Model.TinhTrang == "Disabled") { ViewContext.Writer.Write("selected"); }>
                Disabled</option>
            <option value="Deleted" @if (@Model.TinhTrang == "Deleted") { ViewContext.Writer.Write("selected"); }>
                Deleted</option>
            <option value="other" onclick="TinhTrangKhac">Khác...</option>
        </select>
        <input type="text" value="" name="tinhtrangkhac" style="display: none;"/>
    </div>
</div>
<legend></legend>
<p><strong style="color: Red;"> (*) </strong><strong style="font-style:italic;">: Thông tin không được để trống</strong></p>
<div class="form-actions">
    <button type="submit" class="btn btn-primary">
        Cập nhật</button>
    @Html.ActionLink("Thoát", "DanhSach", "KhachHang", new { @class = "btn btn-inverse" })
</div>
</form>
