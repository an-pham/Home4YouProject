        </div>
        <div class="control-group success">
            <label class="control-lable" for="internet">
                Internet
            </label>
            <div class="controls">
                <textarea name="internet" class="tinymce input-xxlarge">@Model.Internet</textarea>
            </div>
        </div>
        <div class="control-group success">
            <label class="control-lable" for="baidauxe">
                Bãi đậu xe
            </label>
