@model HomeForYou.NhanVien
@{
    Layout = "~/Areas/back/Views/Shared/back_layout.cshtml";
}
<ul class="breadcrumb">
    <li>@Html.ActionLink("Trang chủ", "Index", "Admin")<span class="divider">/</span>
    </li>
    <li class="active">Cập nhật <span class="divider">/</span> </li>
    <li class="active"></li>
</ul>
<legend>Cập nhật thông tin: </legend>
@if (@ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">
            ×</button>
        <h4>
            Chúc mừng!</h4>
        @ViewBag.SuccessMessage
    </div>
}
@if (@ViewBag.FailMessage != null)
{
    <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">
            ×</button>
        <h4>
            Không thành công!</h4>
        @ViewBag.FailMessage
    </div>
}
<form class="form-horizontal" method="post" enctype="multipart/form-data">
<div class="control-group">
    <div class="controls">
        <input type="hidden" name="MaNV" value="@Model.MaNV"/>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Họ và tên</label>
    <div class="controls">
        <input type="text" name="hoten" value="@Model.HoTenNV"/>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Ngày sinh</label>
    <div class="controls">
        @{ string ns = String.Format("{0:dd/MM/yyyy}", @Model.NgaySinh);  }   
        <input type="text" value="@ns" id="datepicker"/>
        <input id="alt-datepicker" name="ngaysinh" type="hidden" value="@Model.NgaySinh"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        CMND</label>
    <div class="controls">
        <input type="text" name="cmnd" value="@Model.CMND"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Lương căn bản</label>
    <div class="controls">
        
        <input type="text" name="luongcb" id="luongcb" value = "@Model.LuongCB" disabled/>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Role</label>
    <div class="controls">
        <input type="text" name="chucvu" id="chucvu" value = "@Model.ChucVu" disabled/>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Số ĐT</label>
    <div class="controls">
        <input type="text" name="sodt" value="@Model.SoDT"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<legend>Tài khoản</legend>
<div class="control-group">
    <label class="control-label">
        Tài khoản</label>
    <div class="controls">
        <input type="text" name="username" id="username" value = "@Model.Username" disabled/>
    </div>
</div>
<legend>Status</legend>
<div class="control-group">
    <div class="controls">
        <input type="text" name="tinhtrang" id="tinhtrang" value = "@Model.TinhTrang" disabled/>
    </div>
</div>
<legend></legend>
<p><strong style="color: Red;"> (*) </strong><strong style="font-style:italic;">: Thông tin không được để trống</strong></p>
<div class="form-actions">
    <button type="submit" class="btn btn-primary">
        Cập nhật</button>
    @Html.ActionLink("Thoát", "Index", "Admin", new { @class = "btn btn-inverse" })
</div>
</form>
