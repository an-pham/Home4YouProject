@model  HomeForYou.Deal
@{
    Layout = "~/Areas/back/Views/Shared/back_layout.cshtml";
}
<ul class="breadcrumb">
    <li>@Html.ActionLink("Trang chủ", "Index", "Admin")<span class="divider">/</span>
    </li>
    <li>@Html.ActionLink("Danh sách deal", "DanhSach", "DealKS") <span class="divider">/</span>
    </li>
    <li class="active">Cập nhật <span class="divider">/</span> </li>
    <li class="active"></li>
</ul>
<legend>Cập nhật deal: </legend>
@if (@ViewBag.Message != null)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">
            ×</button>
        <h4>
            Chúc mừng!</h4>
        @ViewBag.Message
    </div>
}
@if (@ViewBag.Error != null)
{
    <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">
            ×</button>
        <h4>
            Lỗi!</h4>
        @ViewBag.Error
    </div>
}
<form class="form-horizontal" method="post" enctype="multipart/form-data">
<div class="control-group">
 <label class="control-label">
        Mã deal</label>
    <div class="controls">
        <input type="text" disabled name="MaDeal" value="@Model.MaDeal"/>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Giá</label>
    <div class="controls">
        <input type="text" name="Gia" value="@Model.Gia"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Tiền cộng thêm</label>
    <div class="controls">
        <input type="text" name="Tien_Cong_Them" value="@Model.TienCongThem"/>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Khách sạn</label>
    <div class="controls">
        <input type="text" name="KS" disabled value="@Model.KhachSan1.TenKS"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Phòng</label>
    <div class="controls">
        <select name="Phong">
            @foreach (var p in ViewBag.Phong)
            {
                 <option value="@p.MaPhong"  @if (@Model.Phong == @p.MaPhong) { ViewContext.Writer.Write("selected"); }>
                @p.LoaiPhong</option>
            }
        </select>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Ngày bắt đầu</label>
    <div class="controls">
        <input type="text" id="start_date" name="NgayBD" value="@Model.NgayBatDau"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Ngày kết thúc</label>
    <div class="controls">
        <input type="text" id="end_date" name="NgayKT" value="@Model.NgayKetThuc"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Khuyến mãi</label>
    <div class="controls">
        <select name="KhuyenMai">
             @foreach (var k in ViewBag.KhuyenMai)
            {
                 <option value="@k.MaKM"  @if (@Model.KhuyenMai == @k.MaKM) { ViewContext.Writer.Write("selected"); }>
                @k.TenKhuyenMai</option>
            }
        </select>
    </div>
</div>
<legend>Status</legend>
<div class="control-group">
    <div class="controls">
        <select name="tinhtrang">
            <option value="Enabled"  @if (@Model.TinhTrang == "Enabled") { ViewContext.Writer.Write("selected"); }>
                Enabled</option>
            <option value="Disabled" @if (@Model.TinhTrang == "Disabled") { ViewContext.Writer.Write("selected"); }>
                Disabled</option>
            <option value="Deleted" @if (@Model.TinhTrang == "Deleted") { ViewContext.Writer.Write("selected"); }>
                Deleted</option>
        </select>
    </div>
</div>
<legend></legend>
<p><strong style="color: Red;"> (*) </strong>
    <strong style="font-style:italic;">: Thông tin không được để trống</strong>
</p>
<div class="form-actions">
    <button type="submit" class="btn btn-primary">
        Cập nhật</button>
    @Html.ActionLink("Thoát", "DanhSach", "DealKS", new { @class = "btn btn-inverse" })
</div>
</form>
