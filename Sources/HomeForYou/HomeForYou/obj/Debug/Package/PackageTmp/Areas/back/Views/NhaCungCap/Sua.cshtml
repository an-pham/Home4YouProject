@model HomeForYou.NhaCungCap
@{
    Layout = "~/Areas/back/Views/Shared/back_layout.cshtml";
}
@using HomeForYou.Areas.back.Controllers
@if (Session["IsLogin"] == null)
{
    Response.Redirect("Login");
}
<ul class="breadcrumb">
    <li>
        @Html.ActionLink("Trang chủ", "Index", "Admin") <span class="divider">/</span>
    </li>
    <li>
        @Html.ActionLink("Danh sách nhà cung cấp", "DanhSach", "NhaCungCap") <span class="divider">/</span>
    </li>
    <li class="active">Cập nhật</li>
</ul>
<legend>Cập nhật nhà cung cấp:</legend>
@if (@ViewBag.Message != null)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">x</button>   
    <h4>Chúc mừng!</h4>
    @ViewBag.Message
    </div>
}
 @if (@ViewBag.Error != null)
{
    <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">
            ×</button>
        <h4>
            Lỗi!</h4>
        @ViewBag.Error
    </div>
}
<form class="form-horizontal" method="post" enctype="multipart/form-data">
<div class="control-group">
    <label class="control-label">Mã nhà cung cấp</label>
    <div class="controls">
        <input type="text" disabled name="MaNCC" value="@Model.MaNCC"/>
    </div>
</div>
<div class="control-group">
    <label class="control-label">Tên nhà cung cấp</label>
    <div class="controls">
        <input type="text" name="TenNCC" value="@Model.TenNCC"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">Địa chỉ</label>
    <div class="controls">
        <input type="text" name="DiaChi" value="@Model.DiaChi"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">Email</label>
    <div class="controls">
        <input type="text" name="Email" value="@Model.Email"/>
        <span class="help-inline" style="color: red;">(*)</span>
    </div>
</div>
<div class="control-group">
    <label class="control-label">Số điện thoại</label>
    <div class="controls">
        <input type="text" name="SoDT" value="@Model.SoDT"/>
    </div>
</div>
<div class="control-group">
    <label class="control-label">Website</label>
    <div class="controls">
        <input type="text" name="Website" value="@Model.Website"/>
    </div>
</div>
<legend>Status</legend>
<div class="control-group">
    <div class="controls">
         <select name="tinhtrang">
            <option value="Enabled"  @if (@Model.TinhTrang == "Enabled") { ViewContext.Writer.Write("selected"); }>
                Enabled</option>
            <option value="Disabled" @if (@Model.TinhTrang == "Disabled") { ViewContext.Writer.Write("selected"); }>
                Disabled</option>
            <option value="Deleted" @if (@Model.TinhTrang == "Deleted") { ViewContext.Writer.Write("selected"); }>
                Deleted</option>
        </select>
    </div>
</div>
<legend></legend>
<p><strong style="color: Red;"> (*) </strong>
    <strong style="font-style:italic;">: Thông tin không được để trống</strong>
</p>
<div class="form-actions">
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    @Html.ActionLink("Thoát", "DanhSach", "NhaCungCap", new { @class = "btn btn-inverse" })
</div>
</form>
